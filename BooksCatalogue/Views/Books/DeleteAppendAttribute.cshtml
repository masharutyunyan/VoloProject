@model BooksCatalogue.Models.BooksOfAttributesViewModel



<p style="font-size: 20px;">Are you sure you want to delete this?</p>
<div>
    
    <hr />
    <dl class="dl-horizontal">
       

       
        <dt>
            @Html.DisplayName(" Book title")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>
            @Html.DisplayName("Attribute Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttributeName)
        </dd>

        <dt>
            @Html.DisplayName("Attribute value")
        </dt>

        <dd>
            
            @Html.DisplayFor(model => model.AttributeValue)
        </dd>

       
    </dl>
    
    
</div>
@using (Html.BeginForm("DeleteAppendAttributePost", "Books", new { id= Model.AttributeID, enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> 
    </div>
}