@model BooksCatalogue.Models.AttributeXMLTextValueModel
@{
    ViewBag.Title = "EditAttributeValue";
}

<head><link href="~/Content/Site.css" rel="stylesheet" /></head>

@using (Html.BeginForm("EditAttributeValue", "Attribute", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group " style="margin-top">
            @Html.Label("Value:", htmlAttributes: new { @class = "control-label col-md-2", style = "margin-top:70px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", style = "margin-top:70px;margin-left: -117px" } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" id="editAttributeValue">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="AttrValueEditBackToList">
    @Html.ActionLink("Back to List", "AttributeAddTextValue")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
