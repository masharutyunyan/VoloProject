@model BooksCatalogue.Models.MyAttribute

@{
    ViewBag.Title = "AttributeAddTextValueView";
}

<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
@using (Html.BeginForm("AddAttributeValue", "Attribute", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal myHorzontal">
       
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AttributeTextXmlName.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AttributeTextXmlName.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AttributesType.AttributeType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            @Html.Label("Max", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AttributeTextXmlName.MaxCharacterCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AttributeTextXmlName.MaxCharacterCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Min", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AttributeTextXmlName.MinCharacterCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AttributeTextXmlName.MinCharacterCount, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                @Html.Label("Value", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Value", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AttributValues, "", new { @class = "text-danger" })
                </div>
            </div>

          
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<div  id ="attributevalueList" style="display:inline-block; float:right; margin-top: -354px; margin-right: 60px;">
  @{ 
      Html.RenderAction("AttributeValue", "Attribute");
      
  }

 
</div>
